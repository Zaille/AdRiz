<body>
{{>cookie}}
{{>header_all}}
<h1 id="h1-contact">Nous Contacter</h1>
<form id="form-contact">
    <div id="div-contact-nom" class="div-contact grid-row-1-2">
        <label id="label-nom" class="label-form-contact grid-row-1-2" for="input-nom">Nom</label>
        <input id="input-nom" class="input-form-contact grid-row-2-3" type="text" name="nom" maxlength="49"
               autocomplete="family-name" required>
    </div>

    <div id="div-contact-prenom" class="div-contact grid-row-2-3">
        <label id="label-prenom" class="label-form-contact grid-row-1-2" for="input-prenom">Prénom</label>
        <input id="input-prenom" class="input-form-contact grid-row-2-3" type="text" name="prenom" maxlength="49"
               autocomplete="given-name" required>
    </div>

    <div id="div-contact-mail" class="div-contact grid-row-3-4">
        <label id="label-mail" class="label-form-contact grid-row-1-2" for="input-mail">Adresse Mail</label>
        <input id="input-mail" class="input-form-contact grid-row-2-3" type="email" name="mail"
               placeholder="exemple@hotmail.fr" maxlength="99" autocomplete="email" required>
    </div>

    <div id="div-contact-message" class="grid-row-4-5">
        <label id="label-message" class="label-form-contact grid-row-1-2" for="text-message">Message</label>
        <textarea id="text-message" class="input-form-contact grid-row-2-3" name="message"
                  placeholder="Votre message..." maxlength="249" required/></textarea>
    </div>

    <input id="input-form-submit" class="grid-row-5-6" type="submit" value="Envoyer" }>

    <span id="error-formulaire-contact" class="error-contact grid-row-6-7">Une erreur s'est produite. Veuillez réessayer ulterieurement.</span>
    <span id="validation-formulaire-contact" class="grid-row-6-7">Votre message a bien été envoyé.</span>
</form>
{{>footer}}
</body>
